@model Bankalar
@{
    Layout = "_Layout"; ViewBag.Title = "Update Bankalar";
}

<h2>Update Bankalar<a asp-action="Index" class="btn btn-sm btn-secondary">Geri</a></h2>
<form method="post" asp-action="UpdateBankalar">
    <div class="text-danger" asp-validation-summary="All"></div>
      <div class="form-group">
        <label asp-for="BankaID"></label>
        <input class="form-control" asp-for="BankaID" />
        <span asp-validation-for="BankaID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BankaAdi"></label>
        <input class="form-control" asp-for="BankaAdi" />
        <span asp-validation-for="BankaAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BankaLogo"></label>
        <input class="form-control" asp-for="BankaLogo" />
        <span asp-validation-for="BankaLogo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aktif"></label>
        <input class="form-control" asp-for="Aktif" />
        <span asp-validation-for="Aktif" class="text-danger"></span>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Güncelle</button>
    </div>
</form>
