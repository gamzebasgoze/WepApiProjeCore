@model Bankalar
@{
    Layout = "_Layout"; ViewBag.Title = "BANKA ARAMA";
}

<h2>ARAMA <a asp-action="Index" class="btn btn-sm btn-primary">GERİ</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">BankaID:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">BANKA ARAMA</button>
    </div>
</form>

@if (Model != null && Model.BankaID != 0)
{
    <h2>Bankalar</h2>
    <table id="myTable" class="table table-sm table-striped table-bordered m-2 table-hover">
        <thead>
            <tr>
                <th>BankaID</th>
                <th>BankaAdi</th>
                <th>BankaLogo</th>
                <th>Aktif</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.BankaID</td>
                <td>@Model.BankaAdi</td>
                <td>@Model.BankaLogo</td>
                <td>@Model.Aktif</td>
            </tr>
        </tbody>
    </table>
}
else if (Model != null && Model.BankaID == 0)
{
    <div class="text-center">
        <h1>Arama sayfası</h1>
    </div>
}