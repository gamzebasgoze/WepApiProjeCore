@model Bankalar
@{
    Layout = "_Layout"; ViewBag.Title = "Bankalar ekle";
}

<h2>Banka ekleme<a asp-action="Index" class="btn btn-sm btn-secondary">Geri</a></h2>

<form asp-action="AddBankalar">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="BankaAdi">Banka Adi:</label>
        <input asp-for="BankaAdi" class="form-control" />
        <span asp-validation-for="BankaAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BankaLogo">Banka Logo:</label>
        <input asp-for="BankaLogo" class="form-control" />
        <span asp-validation-for="BankaLogo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aktif">Aktif:</label>
        <input asp-for="Aktif" class="form-control" />
        <span asp-validation-for="Aktif" class="text-danger"></span>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Banka Ekle</button>
    </div>
</form>
<br />
<br />
<form asp-action="AddBankalar" method="get">
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary" align="right">Temizle</button>
    </div>
</form>


@if (Model != null)
{
    <h2>Bankalar</h2>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr colspan="2">
                <th>BankaAdi</th>
                <th>BankaLogo</th>
                <th>Aktif</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.BankaAdi</td>
                <td>@Model.BankaLogo</td>
                <td>@Model.Aktif</td>
            </tr>
        </tbody>
    </table>
    <div class="alert-info">BANKA EKLENDİ!!!</div>
}
