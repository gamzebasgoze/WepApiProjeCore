
@model Taksitler
@{
    Layout = "_Layout"; ViewBag.Title = "Taksitleri ekle";
}

<h2>Taksit ekleme<a asp-action="Index" class="btn btn-sm btn-secondary">Geri</a></h2>

<form asp-action="AddTaksitler">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="BankaID">Banka ID:</label>
        <input asp-for="BankaID" class="form-control" />
        <span asp-validation-for="BankaID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Taksit">Taksit:</label>
        <input asp-for="Taksit" class="form-control" />
        <span asp-validation-for="Taksit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VadeFarki">Vade Farkı:</label>
        <input asp-for="VadeFarki" class="form-control" />
        <span asp-validation-for="VadeFarki" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="EkTaksit">Ek Taksit:</label>
        <input asp-for="EkTaksit" class="form-control" />
        <span asp-validation-for="EkTaksit" class="text-danger"></span>
    </div>
            <div class="form-group">
        <label asp-for="Aciklama">Açıklama:</label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>


    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
    </div>
</form>
<br />
<br />
<form asp-action="AddTaksitler" method="get">
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary" align="right">Temizle</button>
    </div>
</form>


@if (Model != null)
{
    <h2>Taksitler</h2>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr colspan="2">
                <th>BankaID</th>
                <th>Taksit</th>
                <th>EkTaksit</th>
                <th>VadeFarki</th>
                <th>Aciklama</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.BankaID</td>
                <td>@Model.Taksit</td>
                <td>@Model.EkTaksit</td>
                <td>@Model.VadeFarki</td>
                <td>@Model.Aciklama</td>
            </tr>
        </tbody>
    </table>
    <div class="alert-info">TAKSİT SEÇENEĞİ EKLENDİ!!!</div>
}
